<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Ui.ManualMain">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="11dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:text="Light"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <GridLayout
                android:id="@+id/light_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txt_lighton"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="On"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_lightoff"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="Off"
                    android:gravity="center"/>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:text="Tv"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <GridLayout
                android:id="@+id/tv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txt_tvon"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="On"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_tvoff"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="Off"
                    android:gravity="center"/>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:text="Fan"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <GridLayout
                android:id="@+id/fan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txt_fanon"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="On"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_fanoff"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="Off"
                    android:gravity="center"/>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:text="Aircon"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <GridLayout
                android:id="@+id/air_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txt_airon"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="On"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_airoff"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="Off"
                    android:gravity="center"/>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:text="Water Dispenser"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <GridLayout
                android:id="@+id/water_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txt_wateron"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="On"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_wateroff"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="18sp"
                    android:height="80dp"
                    android:text="Off"
                    android:gravity="center"/>
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>